@model IEnumerable<StoreApp.Models.Orders.OrderViewModel>
@using StoreApp.Enums;
@{
    string role = Session["Role"] as String;
}
@{
    ViewBag.Title = User.Identity.Name + " orders";
}

<h3>@User.Identity.Name orders</h3>

@foreach (var item in Model)
{
    <div class="row font-weight-bold">
        <div class="col-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </div>
        <div class="col-1">
            @Html.DisplayNameFor(model => model.TotalCost)
        </div>
        <div class="col-1">
            @Html.DisplayNameFor(model => model.Status)
        </div>
        <div class="col-1">
            @Html.DisplayNameFor(model => model.Discount)
        </div>
        <div class="col-1">
            Picture
        </div>
        <div class="col-1">
            Product
        </div>
        <div class="col-1">
            Price
        </div>
        <div class="col-1">
            Quantity
        </div>
        <div class="col-1">
            Unit
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            @Html.DisplayFor(modelItem => item.OrderDate)
        </div>
        <div class="col-1">
            @Html.DisplayFor(modelItem => item.TotalCost)
        </div>
        <div class="col-1">
            @Html.DisplayFor(modelItem => item.Status)
        </div>
        <div class="col-1">
            @Html.DisplayFor(modelItem => item.Discount)
        </div>
        @if (Request.IsAuthenticated && !Session["Role"].ToString().Equals(UserRoles.Admin.ToString()))
        {
            <div class="offset-5">
                @Html.ActionLink("Save as xml", "SaveOrderXML", "Account", new { id = item.Id }, new { @class = "btn btn-outline-info btn-sm" })
            </div>
        }
    </div>

    foreach (var details in item.OrderDetails)
    {
        <div class="row">
            <div class="col-1 offset-sm-5">
                @if (details.Product.Picture == null)
                {
                    <img src="~/Pictures/preview_no_image.png" />
                }
                else
                {
                    <img src="/Pictures/Products/@details.ProductId/preview_@details.Product.Picture" />
                }
            </div>
            <div class="col-1">
                @Html.DisplayFor(det => details.Product.Name)
            </div>
            <div class="col-1">
                @Html.DisplayFor(det => details.Price)
            </div>
            <div class="col-1">
                @Html.DisplayFor(det => details.Quantity)
            </div>
            <div class="col-1">
                @Html.DisplayFor(det => details.Product.Unit)
            </div>
        </div>
    }
    <hr />
}