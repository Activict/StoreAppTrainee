<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark navbar-inverse fixed-top container">
        <a class="navbar-brand">
            <img src="https://www.freeiconspng.com/uploads/c-logo-icon-18.png" width="30" alt="E-shop" /></a>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Store", "Index", "Store", null, new { @class = "nav-link" })</li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Admin panel
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Units", "Index", "Units", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Category", "Index", "Category", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Brands", "Index", "Brands", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Producers", "Index", "Producers", null, new { @class = "dropdown-item" })
                    </div>
                </li>
            </ul>
            <span>
                @if (Request.IsAuthenticated)
                {
                    @Html.ActionLink(User.Identity.Name, "Account", "Account")
                    @Html.ActionLink("logout", "Logout", "Account")
                }
                else
                {
                    @Html.ActionLink("Login", "Login", "Account", null, new { @class = "navbar-text" })

                    @Html.ActionLink("Register", "Registration", "Account", null, new { @class = "navbar-text" })
                }
            </span>
        </div>
    </nav>


