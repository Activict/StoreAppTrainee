@model StoreApp.Models.Categories.CategoryViewModel

@{
    ViewBag.Title = "Details category";
}

<h3>Details category @Model.Name</h3>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit category", "EditCategory", new { id = Model.Id }) |
    @Html.ActionLink("Back to categories", "Index")
</p>
